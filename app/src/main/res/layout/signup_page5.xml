<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_button_signup5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:backgroundTint="@color/white"
        android:text="<"
        android:textColor="@color/big_word"
        android:textSize="20dp"
        android:textStyle="bold"
        android:translationX="-125dp"
        android:translationY="70dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <LinearLayout
        android:id="@+id/create_account2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:translationY="0dp">


        <ImageView
            android:id="@+id/icon_account"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_weight="0"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/image_19" />

        <TextView
            android:id="@+id/create_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Create an Account"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/progress_bar5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:translationY="10dp"
            app:srcCompat="@drawable/progress_bar5" />

        <TextView
            android:id="@+id/Select_purpose_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:translationY="25dp"
            android:text="Select your primary purpose"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:id="@+id/research_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:translationY="50dp">

            <CheckBox
                android:id="@+id/checkResearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/content_box_research"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/content_box_purple" />

                <TextView
                    android:id="@+id/text_research"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Research"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"/>


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/personal_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:translationY="70dp">

            <CheckBox
                android:id="@+id/checkPurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/content_box_purpose"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:background="@drawable/content_box_purple" />

                <TextView
                    android:id="@+id/text_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Purpose"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"
                    android:textSize="20sp"/>


            </FrameLayout>

        </LinearLayout>


        <Button
            android:id="@+id/next_button_signup5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/button"
            android:textStyle="bold"
            android:text="Next"
            android:translationY="150dp" />

    </LinearLayout>

</LinearLayout>