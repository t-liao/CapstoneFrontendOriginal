<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/content_box_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/content_box_white"
            />

        <LinearLayout
            android:id="@+id/home_icon_grey"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/home_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/home_grey"
                android:layout_marginHorizontal="60dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/map_icon_grey"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/map_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/map_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_icon_blue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/content_box_user"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@drawable/content_box_white"
                android:backgroundTint="@color/bottom"
                android:layout_marginBottom="10dp"
                />

            <ImageView
                android:id="@+id/user_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/user_blue"
                android:layout_marginHorizontal="60dp"/>

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="16sp"
                android:textColor="@color/bottom"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>