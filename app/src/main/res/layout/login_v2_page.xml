<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/login_shape1"
            android:layout_width="380dp"
            android:layout_height="560dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_shape1" />

        <ImageView
            android:id="@+id/login_shape2"
            android:layout_width="380dp"
            android:layout_height="325dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_shape2" />

        <LinearLayout
            android:id="@+id/login_v2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_page_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/login_page_img"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/welcome_v2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Welcome"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/by_signing_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="By signing in you are agreeing our"
                android:layout_marginVertical="3dp"/>

            <TextView
                android:id="@+id/policy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term and privacy policy"
                android:textColor="@color/bright_blue"
                android:layout_marginVertical="3dp"
                android:clickable="true"
                android:onClick="onClick" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp">

                <View
                    android:id="@+id/content_box_email"
                    android:layout_width="298dp"
                    android:layout_height="50dp"
                    android:background="@drawable/content_box_grey"
                    />

                <EditText
                    android:id="@+id/email_signup1"
                    android:layout_gravity="center"
                    android:layout_width="275dp"
                    android:layout_height="50dp"
                    android:ems="1"
                    android:background="@null"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@drawable/email"
                    android:hint="Email"/>


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp">

                <View
                    android:id="@+id/content_box_password_loginv2"
                    android:layout_width="298dp"
                    android:layout_height="50dp"
                    android:background="@drawable/content_box_grey"
                    />


                <EditText
                    android:id="@+id/password_loginv2"
                    android:layout_gravity="center"
                    android:layout_width="275dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/lock"
                    android:hint="Password"/>

            </FrameLayout>

            <CheckBox
                android:id="@+id/stayin_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay signed in?"
                android:textSize="15sp"
                android:layout_gravity="left"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="20dp"
                >

                <Button
                    android:id="@+id/login_button2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/bright_blue"
                    android:elevation="5dp"
                    android:stateListAnimator="@null"
                    android:text="Login"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/forgot_password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Forgot Password"
                    android:textColor="@color/bright_blue"
                    android:layout_marginHorizontal="10dp"
                    android:clickable="true"
                    android:onClick="onClick"/>


            </LinearLayout>

            <TextView
                android:id="@+id/account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Don't have an Account?"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/sign_up_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/bright_blue"
                android:backgroundTint="@color/white"
                android:layout_marginVertical="5dp"/>


            <!--idk if this clickable and inClick makes it clickable or if I need
            to do something else somewhere else -->

        </LinearLayout>

    </FrameLayout>


</LinearLayout>