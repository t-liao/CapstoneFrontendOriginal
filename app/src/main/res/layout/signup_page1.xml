<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_button_signup1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/back"
        android:elevation="10dp"
        android:stateListAnimator="@null"/>

    <LinearLayout
        android:id="@+id/create_account1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/icon_account"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_weight="0"
            android:scaleX="0.7"
            android:scaleY="0.7"
            app:srcCompat="@drawable/image_19" />

        <TextView
            android:id="@+id/create_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Create an Account"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/progress_bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/progress_bar1" />

        <TextView
            android:id="@+id/welcome_signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Welcome! First things first...\n\nPlease enter your email address"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <View
                android:id="@+id/content_box_email"
                android:layout_width="298dp"
                android:layout_height="50dp"
                android:background="@drawable/content_box_grey" />

            <EditText
                android:id="@+id/email_signup1"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@null"
                android:drawableRight="@drawable/email"
                android:ems="1"
                android:hint="Email"
                android:inputType="textEmailAddress" />


        </FrameLayout>

        <Button
            android:id="@+id/next_button_signup1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/button"
            android:text="Next"
            android:textStyle="bold"
            android:layout_marginTop="50dp" />

    </LinearLayout>

</LinearLayout>
